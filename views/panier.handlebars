<section class="home-slider owl-carousel">
  <div class="slider-item" style="background-image: url(img/bg_3.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row slider-text justify-content-center align-items-center">

        <div class="col-md-7 col-sm-12 text-center ftco-animate">
          <h1 class="mb-3 mt-5 bread">Votre Panier</h1>
          <p class="breadcrumbs"><span class="mr-2"><a href="/">Menu</a></span> <span>Panier</span></p>
        </div>

      </div>
    </div>
  </div>
</section>

<section class="ftco-section ftco-cart">
  <div class="container">
    <div class="row">
      <div class="col-md-12 ftco-animate">
        <div class="cart-list">
          <table class="table">
            <thead class="thead-primary">
              <tr class="text-center">
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>Repas</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Totale</th>
              </tr>
            </thead>
            <tbody>
              {{#unless nbAchats}}
              <tr class="text-center">
                <td colspan="6">
                  <h3>Votre panier est vide</h3>
                </td>
                {{/unless}}
                {{#each produits}}
              <tr class="text-center">
                <td class="product-remove">
                  <input type="button" name="delete-all" id="{{this.id_produit}}" value="üóëÔ∏è"
                    class="delete-all btn btn-outline-secondary btn-sm ml-2" />

                </td>

                <td class="image-prod">
                  <div class="img" style="background-image:url({{this.chemin_image}});"></div>
                </td>

                <td class="product-name">
                  <h3>{{this.nom}}</h3>
                </td>

                <td class="price">${{this.prix}}</td>

                <td class="quantity">
                  <form class="input-group quantity-input-group justify-content-center">
                    <input type="number" min="0" class="" placeholder="1" value="{{this.quantite}}">
                    <input type="submit" name="update quantity" id="{{this.id_produit}}-{{this.quantite}}" value="‚úîÔ∏è"
                      class="delete-one btn btn-outline-secondary btn-sm" />
                  </form>
                </td>

                <td class="total">${{this.prix_total}}</td>
              </tr>

              {{!-- <tr>
                <th scope="row"><img src="{{this.chemin_image}}" alt="{{this.nom}}" /></th>
                <td>{{this.nom}}</td>
                <td>{{this.quantite}}</td>
                <td>{{this.prix}}</td>

                <td class="d-flex flex-row">

                  <form class="input-group quantity-input-group">
                    <input type="number" min="0" class="form-control" placeholder="0" value="0">
                    <input type="submit" name="update quantity" id="{{this.id_produit}}-{{this.quantite}}" value="üóëÔ∏è"
                      class="delete-one btn btn-outline-secondary btn-sm" />
                  </form>
                  <input type="button" name="delete-all" id="{{this.id_produit}}" value="üóëÔ∏è tous"
                    class="delete-all btn btn-outline-secondary btn-sm ml-2" />
                </td> --}}
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row justify-content-end mt-5">
      <div class="col-xl-8 ftco-animate">
        <form class="billing-form ftco-bg-dark p-3 p-md-5 d-flex flex-column">
          <h3 class="mb-4 billing-heading w-100">Details du livraison</h3>
          <div class="row align-items-end">
            <div class="col-md-6">
              <div class="form-group">
                <label for="firstname">Nom</label>
                <input type="text" class="form-control" placeholder="">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="lastname">Pr√©nom</label>
                <input type="text" class="form-control" placeholder="">
              </div>
            </div>
            <div class="w-100"></div>
            <div class="col-md-12">
              <div class="form-group">
                <label for="country">Pays</label>
                <div class="select-wrap">
                  <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                  <select name="" id="" class="form-control">
                    <option value="">ŸêCanada</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="w-100"></div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="streetaddress">Addresse</label>
                <input type="text" class="form-control" placeholder="Addresse 1">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Addresse 2">
              </div>
            </div>
            <div class="w-100"></div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="towncity">Ville</label>
                <input type="text" class="form-control" placeholder="">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="postcodezip">ZIP *</label>
                <input type="text" class="form-control" placeholder="">
              </div>
            </div>
            <div class="w-100"></div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="phone">T√©l√©phone</label>
                <input type="text" class="form-control" placeholder="">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="emailaddress">Addresse Email</label>
                <input type="text" class="form-control" placeholder="">
              </div>
            </div>
          </div>
          
          <h3 class="mb-4 billing-heading w-100">Details de paiement</h3>
          <div class="row align-items-end">
            <div class="w-100"></div>
            <div class="col-md-9">
              <div class="form-group">
                <label for="firstname">Carte</label>
                <input type="text" class="form-control" placeholder="" >
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label for="firstname">CVV</label>
                <input type="text" class="form-control" placeholder="" >
              </div>
            </div>
            <div class="w-100"></div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="streetaddress">Date d'expiration</label>
                <input type="number" min="1" max="31" class="form-control" placeholder="DD">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <input type="number" min="1" max="12" class="form-control" placeholder="MM">
              </div>
            </div>
          </div>
        </form><!-- END -->
      </div>

      <div class="col-12 col-xl-4 w-100 d-flex flex-column justify-content-around">
        <div class="d-flex my-3">
          <div class="cart-detail cart-total ftco-bg-dark p-3 p-md-4">
            <h3 class="billing-heading mb-4">Totale Panier</h3>
            <p class="d-flex">
              <span>Sous-totale</span>
              <span>${{total}}</span>
            </p>
            <p class="d-flex">
              <span>Livraison</span>
              <span>$0.00</span>
            </p>
            <p class="d-flex">
              <span>Promo</span>
              <span>$0.00</span>
            </p>
            <hr>
            <p class="d-flex total-price">
              <span>Totale</span>
              <span>${{total}}</span>
            </p>
            <p><a id="commander" class="delete-cart btn btn-primary py-3 px-4 mt-3">Vider le panier</a></p>
          </div>
        </div>
        <div class="my-3">
          <div class="cart-detail ftco-bg-dark p-3 p-md-4">
            <h3 class="billing-heading mb-4">M√©thode de Paiement</h3>
            <div class="form-group">
              <div class="col-md-12">
                <div class="radio">
                  <label><input type="radio" name="optradio" class="mr-2"> Transfers bancaire</label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12">
                <div class="radio">
                  <label><input type="radio" name="optradio" class="mr-2"> Paiement directe</label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12">
                <div class="radio">
                  <label><input type="radio" name="optradio" class="mr-2"> Paypal</label>
                </div>
              </div>
            </div>
            <div class="">
              <div class="col-md-12">
                <div class="checkbox">
                  <label><input type="checkbox" value="" class="mr-2"> J'accepte les conditions d'utilisation</label>
                </div>
              </div>
            </div>
            {{#unless nbAchats}}
            <p><a id="commander" class="disabled btn btn-primary py-3 px-4 mt-3">Passer ma commande</a></p>
            {{/unless}}
            {{#if nbAchats}}
            <p><a id="commander" class="submit-cart btn btn-primary py-3 px-4 mt-3">Passer ma commande</a></p>
            {{/if}}
            </div>
        </div>
      </div>
    </div>
  </div>
</section>

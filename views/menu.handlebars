            </div>
          </div>
          <div class="col-md-12 d-flex align-items-center">
            <div class="tab-content ftco-animate" id="v-pills-tabContent">
              <div class="tab-pane fade show active" id="v-pills-0" role="tabpanel" aria-labelledby="v-pills-0-tab">
                <div class="row">
                  {{#each produits}}
                  <div class="col-md-3">
                    <div class="menu-entry">
                      <a href="#" class="img" style="background-image: url({{this.chemin_image}})"></a>
                      <div class="text text-center pt-4">
                        <h3>
                          <a href="#">{{this.nom}}</a>
                        </h3>
                        <p class="price"><span>${{this.prix}}</span></p>
                        <p>
                        <form novalidate class="input-group quantity-input-group">
                          <input type="number" min="1" class="" placeholder="1" value="1" />
                          <input type="submit" class="liste-boutons btn btn-primary btn-outline-primary"
                            id="{{this.id_produit}}" value="Add to Cartüõí" />
                        </form>
                        {{!-- <a href="cart.html" class="liste-boutons btn btn-primary btn-outline-primary">Add to
                          Cart</a> --}}
                        </p>
                      </div>
                    </div>
                  </div>
                  {{/each}}

                </div>
              </div>

              <div class="tab-pane fade" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-1-tab">
                <div class="row">
                  <div class="col-12">
                    <div class="menu-wrap">
                      Aucune autre d√©lice pour le moment.
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
